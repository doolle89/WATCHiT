<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dusan.stefanovic.treningapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <uses-feature android:name="android.hardware.camera"
        android:required="false" />
    
    <permission android:name="dusan.stefanovic.connectionapp.permission.WATCHiT"
        android:label="@string/permission_label_watchit"
        android:permissionGroup="android.permission-group.AFFECTS_BATTERY"
        android:protectionLevel="normal" />
    
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="dusan.stefanovic.connectionapp.permission.WATCHiT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="dusan.stefanovic.trainingapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="dusan.stefanovic.trainingapp.MainMenuActivity" 
            android:label="@string/main_menu_activity_label"
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="dusan.stefanovic.trainingapp.ProcedurePreviewActivity" 
            android:label="@string/procedure_preview_activity_label"
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="dusan.stefanovic.trainingapp.CreateProcedureActivity" 
            android:label="@string/create_procedure_activity_label"
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="dusan.stefanovic.trainingapp.AddNewStepActivity" 
            android:label="@string/add_new_step_activity_label"
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="dusan.stefanovic.trainingapp.TrainingActivity" 
            android:label="@string/training_activity_label"
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="dusan.stefanovic.trainingapp.ReflectionActivity" 
            android:label="@string/reflection_activity_label"
            android:screenOrientation="portrait"
            android:uiOptions="splitActionBarWhenNarrow" >
            
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
            
        </activity>
        
        <activity 
            android:name="dusan.stefanovic.trainingapp.ProcedureResultPreviewActivity" 
            android:label="@string/procedure_preview_activity_label"
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="dusan.stefanovic.trainingapp.TestActivity" 
            android:label="@string/training_activity_label" />
        
        <service android:name="dusan.stefanovic.trainingapp.service.TrainingService" />
        
        <!-- ConnectionApp -->
        
        <activity
            android:name="dusan.stefanovic.connectionapp.MainActivity"
            android:label="@string/app_name"
            android:process="dusan.stefanovic.connectionapp.WATCHiT" >
            <intent-filter>
                <action android:name="dusan.stefanovic.connectionapp.SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="dusan.stefanovic.connectionapp.BluetoothDeviceListActivity"
            android:label="@string/select_device"
            android:configChanges="orientation|keyboardHidden"
            android:process="dusan.stefanovic.connectionapp.WATCHiT" >
            <intent-filter>
                <action android:name="dusan.stefanovic.connectionapp.CHOOSE_BLUETOOTH_DEVICE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <service 
            android:name="dusan.stefanovic.connectionapp.service.WATCHiTService"
            android:permission="dusan.stefanovic.connectionapp.permission.WATCHiT"
            android:process="dusan.stefanovic.connectionapp.WATCHiT">
            <intent-filter>
                <action android:name="dusan.stefanovic.connectionapp.service.WATCHiT_SERVICE" />
            </intent-filter>
        </service>
            
    </application>

</manifest>
